#
# How to Install Under Linux
#
# 1: Install Compilation Tools
sudo apt-get install libopenmpi-dev gfortran build-essential cmake git
# 2: Compile it under $HOME Directory
cd $HOME
mkdir cfl3d
cd cfl3d
got clone git@github.com:gitlarky/CFL3D.git
cd CFL3D/external
./build_cgns
cd ../build
cmake ../
make -j 8
# 3: Move compiled file into /opt and set environment
cd ../../
sudo move -rf CFL3D /opt/
cd ..
rm -rf cfl3d
cd /opt/CFL3D/build/bin
source ./Set_CFL3D_Environment